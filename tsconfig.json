{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": ["dom", "es2016", "es2017"],
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.snap"
    ]
}
